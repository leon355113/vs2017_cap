@model IEnumerable<App.Entities.Base.UnidadMedida>

@{
    ViewBag.Title = "Lista de Unidad Medidas";
}

<h2>Lista de UnidadMedidas</h2>

@*Sin usar html helper*@
@*<a class="btn btn-success btn-md" href="/UnidadMedida/Create">Nueva UnidadMedida</a>*@

@*usando html helper*@
@Html.ActionLink("Nueva Unidad Medida", "Create", "UnidadMedida", new { @class = "btn btn-success btn-md" })

<p></p>
<table class="table">
    <tr>
        <th>Nombre</th>
         
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Nombre</td>
           
            <td>
                <a href="@Url.Action("Edit", new { id = item.UnidadMedidaID})">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>

            </td>
        </tr>
    }


</table>

