@model  App.UI.Web.MVC.Models.ViewModels.ProductoSearchViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Productos</h2>

@using (Html.BeginForm())
{
    <label>Buscar por Nombre</label>

    @Html.TextBoxFor(item => item.filterByName, new { @class = "form-control" })
   
    <br />

    <label>Buscar por Categoria</label> 
    @Html.DropDownListFor(item=> item.filterByCategoria, new SelectList(Model.categorias, "CategoriaID", "Nombre"), "Todos", new { @class = "form-control" })

    <br />
    <label>Buscar por Marca</label>

    @Html.DropDownListFor(item => item.filterByMarca, new SelectList(Model.marcas, "MarcaID", "Nombre"), "Todos", new { @class = "form-control" })
    <br />
    <button class="btn btn-info btn-sm">Buscar</button>
    @Html.ActionLink("Nuevo Producto", "Create", "Producto", new { @class = "btn btn-success btn-md" })


}

<table class="table table-bordered table-condensed table-striped input-sm">
    <tr>
        <th>Id</th>
        <th>Código</th>
        <th>Nombre</th>
        <th>Categoria </th>
        <th>Marca</th>
        <th>Precio Mayor</th>
        <th>Precio Menor</th>
        <th>Stock Actual</th>
        <th></th>
    </tr>
    @foreach (var item in Model.productos)
    {
        <tr>
            <td>@item.ProductoID</td>
            <td>@item.ProductoCode</td>
            <td>@item.Nombre</td>
            <td>@item.Categoria.Nombre</td>
            <td>@item.Marca.Nombre</td>
            <td>@item.PrecioMayor</td>
            <td>@item.PrecioMenor</td>
            <td>@item.StockActual</td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.ProductoID})">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>

            </td>
        </tr>
    }
</table>


