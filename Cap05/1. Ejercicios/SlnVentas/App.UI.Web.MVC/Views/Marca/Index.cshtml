@model IEnumerable<App.Entities.Base.Marca>

@{
    ViewBag.Title = "Lista de Marcas";
}

<h2>Lista de Marcas</h2>

@*Sin usar html helper*@
@*<a class="btn btn-success btn-md" href="/Categoria/Create">Nueva Categoria</a>*@

@*usando html helper*@
@Html.ActionLink("Nueva Marca", "Create", "Marca", new { @class = "btn btn-success btn-md" })

<p></p>
<table class="table">
    <tr>
        <th>Nombre</th>
        <th>Descripción</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Nombre</td>
            <td>@item.Descripcion</td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.MarcaID})">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>

            </td>
        </tr>
    }


</table>

